{
  "$schema": "https://alirezanet.github.io/Husky.Net/schema.json",
  "tasks": [
    {
      "name": "dotnet format",
      "group": "pre-commit-operations",
      "command": "dotnet",
      "args": [
        "format",
        "--verify-no-changes",
        "--verbosity",
        "detailed",
        "--severity",
        "info"
      ],
      "include": ["**/*.cs"]
    },
    {
      "name": "csharpier",
      "group": "pre-commit-operations",
      "command": "dotnet",
      "args": ["csharpier", ".", "--check", "--loglevel", "debug"]
    },
    {
      "name": "prettier",
      "group": "pre-commit-operations",
      "command": "npx",
      "args": [
        "prettier",
        "**/*",
        "!**/*.{md,cs,csproj,sln,nsdepcop,references,props,dependencies,targets}",
        "--check",
        "--log-level",
        "debug"
      ]
    },
    {
      "name": "dotnet build",
      "group": "pre-push-operations",
      "command": "dotnet",
      "args": ["build"]
    },
    {
      "name": "dotnet test",
      "group": "pre-push-operations",
      "command": "dotnet",
      "args": ["test"]
    },
    {
      "name": "commitlint",
      "group": "commit-msg-operations",
      "command": "npx",
      "args": ["commitlint", "--edit", "${args}", "--verbose"]
    }
  ]
}
