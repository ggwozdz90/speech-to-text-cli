{
  "$schema": "https://alirezanet.github.io/Husky.Net/schema.json",
  "tasks": [
    {
      "name": "dotnet-format",
      "group": "pre-commit-operations",
      "command": "dotnet",
      "args": [
        "format",
        "--verify-no-changes",
        "--verbosity",
        "detailed",
        "--severity",
        "info"
      ],
      "include": [
        "**/*.cs"
      ]
    }
  ]
}