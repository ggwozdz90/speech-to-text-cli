{
  "$schema": "https://alirezanet.github.io/Husky.Net/schema.json",
  "tasks": [
    {
      "name": "dotnet format",
      "group": "pre-commit-operations",
      "command": "dotnet",
      "args": [
        "format",
        "--verify-no-changes",
        "--verbosity",
        "detailed",
        "--severity",
        "info"
      ],
      "include": [
        "**/*.cs"
      ]
    },
    {
      "name": "csharpier",
      "group": "pre-commit-operations",
      "command": "dotnet",
      "args": [
        "csharpier",
        ".",
        "--check",
        "--loglevel",
        "debug"
      ]
    },
    {
      "name": "dotnet build",
      "group": "pre-push-operations",
      "command": "dotnet",
      "args": [
        "build"
      ]
    }
  ]
}